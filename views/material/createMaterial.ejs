<html lang="fr">
    <head>
        <%- include('../included/common.ejs') %>
        <title>Création d'un nouveau matériel</title>
        <link rel="stylesheet" href="/public/styles/material/viewMaterial.css"/>
    </head>

    <body>
        <%- include('../included/menu.ejs') %>

        <main>
            <h1>Création d'un nouveau matériel</h1>

            <section>
                <section>
                    <img id="image_preview" src="/public/icons/no_image.png" alt="Image du matériel">

                    <div>
                        <section>
                            <input id="title" type="text" placeholder="IPhone 15">
                            <p></p>
                            <ul>
                                <li>
                                    <button title="Abandonner la création" onclick="window.location.href='/materials/'">Abandonner</button>
                                </li>
                                <li>
                                    <button id="save" title="Enregistrer ce nouveau métriel">Enregistrer</button>
                                </li>
                            </ul>
                        </section>
                        <ul>
                            <li>
                                <h5>Version</h5>
                                <input id="version" type="text" placeholder="V8.0">
                            </li>
                            <li>
                                <h5>Image</h5>
                                <input id="image" type="text" placeholder="https://site/example.png">
                            </li>
                            <li>
                                <h5>Référence</h5>
                                <input id="reference" type="text" placeholder="AN150">
                            </li>
                            <li>
                                <h5>Numéro de téléphone</h5>
                                <input id="phoneNumber" type="text" placeholder="0618784858">
                            </li>
                        </ul>
                    </div>
                </section>
            </section>
        </main>
    </body>

    <script type="text/javascript">
		// Set the structure of a toast
		const toast_structure = `<%- include('../included/toast.ejs'); %>`;
    </script>
    <script type="text/javascript" src="/public/scripts/Toast.js"></script>
    <script type="text/javascript" src="/public/scripts/material/createMaterial.js"></script>
</html>